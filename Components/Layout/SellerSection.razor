<section id="sellers" class="sellers-section"> 
<div class="container"> 
<h3 class="section-title">Our Sales Team</h3> 
<p class="section-subtitle">Expert professionals ready to help you</p> 

<div class="sellers-grid"> 
@foreach (var seller in sellers) 
{ 
<div class="seller-card"> 
<img src="@seller.ImageUrl" alt="@seller.Name" class="seller-image" /> 
<h4 class="seller-name">@seller.Name</h4> 
<p class="seller-role">@seller.Role</p> 
<p class="seller-description">@seller.Description</p> 
</div> 
} 
</div> 
</div>
</section>

